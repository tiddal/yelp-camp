<% include ../partials/header %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds from all over the world!</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">
				Add a new campground
			</a>
		</p>
	</div>
</header>

<div class="row text-center">
	<div class="col-lg-12">
		<h3>Our Most Popular Campgrounds</h3>
	</div>
	<% campgrounds.forEach((campground) => { %>
	<div class="col-12 col-sm-6 col-md-4 col-lg-3 my-3">
		<div class="card h-100">
			<img class="card-img-top" src="<%= campground.img %>" />
			<div class="card-body">
				<h4 class="card-title"><%= campground.name %></h4>
			</div>
			<p>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
					>More Info</a
				>
			</p>
		</div>
	</div>
	<% }) %>
</div>

<% include ../partials/footer %>
